<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context="cn.com.shequnew.pages.activity.InstallDetailsActivity">


    <include layout="@layout/top_title"></include>

    <TextView
        android:id="@+id/install_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:text="关于我们"
        android:textColor="@color/col_bg" />

    <TextView
        android:id="@+id/install_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text="联系我们"
        android:textColor="@color/col_bg" />

    <TextView
        android:id="@+id/install_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text="分享APP"
        android:textColor="@color/col_bg" />

    <TextView
        android:id="@+id/install_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text="反馈意见"
        android:textColor="@color/col_bg" />

    <LinearLayout
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="清除缓存"
            android:textColor="@color/col_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/preSale_progress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/white"
                android:gravity="right"
                android:visibility="visible">
                <ProgressBar
                    android:layout_width="wrap_content"
                    style="?android:attr/progressBarStyleLargeInverse"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>


            <TextView
                android:id="@+id/clear_this"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0M"
                android:textColor="@color/col_bg"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/install_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text="当前版本"
        android:textColor="@color/col_bg" />

    <TextView
        android:id="@+id/install_back_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text="退出登录"
        android:textColor="@color/col_red" />

</LinearLayout>
